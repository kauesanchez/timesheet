<% content_for :question do %><%= title%><% end %>
<br class="clear" />

<% form_for controller_name, :url=>{:action=>'questions', :id=>(@question_number + 1)}, :html=>{:id=>"#{controller_name}_form"} do |f| -%>
	<div class="grid_13  vgutter enclose prefix_3">
		
			<% CareDay.all.each do |care_day| %>
				<div class="grid_3 center markable_item"  style="margin-bottom: 8px;margin-top: 8px;padding-left: 8px; padding-right: 8px; height: 110px;">
					<%= f.label :"care_day_id_#{care_day.id}", image_tag(care_day.to_img, :alt=>care_day) %>
					<%= f.radio_button :care_day_id, care_day.id %>
					<%= f.label "care_day_id_#{care_day.id}", care_day.name %>
				</div>
			<% end %>
	</div>
	
	<%= render :partial=>'navigation' %>
<% end -%>
