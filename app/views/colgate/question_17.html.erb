					</div>
					<% i+=1 %>
					<% end %>
				
			</div>	
			<div class="grid_12 vgutter ">	
					<div class="grid_2 "><%=@model::LABELS[:a_whitening_kit]%></div>
					<% i=0 %>
					<% AWhiteningKit.all.each do |a_whitening_kit| %>
					<div class="grid_2 <%= i%3==0 ? "alpha" : ("omega" if i%3==2) %> " style="text-align:center;">
						<%= f.radio_button :a_whitening_kit_id, a_whitening_kit.id %>
						<%= f.label :"a_whitening_kit_id_#{a_whitening_kit.id}", a_whitening_kit.name %>
					</div>
					<% i+=1 %>
					<% end %>
			</div>
			<div class="grid_12 vgutter ">	
					<div class="grid_2  "><%=@model::LABELS[:a_water_jet]%></div>
					<% i=0 %>
