
<% content_for :question do %><%= title%><% end %>

	<% form_for controller_name, :url=>{:action=>'questions', :id=>(@question_number + 1)}, :html=>{:id=>"#{controller_name}_form"} do |f| -%>
		<div class="vgutter enclose">
			<div class="grid_12  prefix_2 ">
				<div class="grid_12 vgutter ">	
				<div class="grid_2 "><%=@model::LABELS[:floss_care]%> </div>
				<% i=0 %>
				<% FlossCare.all.each do |floss_care| %>
					<div class="grid_2 <%= i%2==0 ? "alpha" : ("omega" if i%3==2) %> " style="text-align:center;">	
					<%= f.radio_button :floss_care_id, floss_care.id %>
					<%= f.label :"floss_care_id_#{floss_care.id}", floss_care.name %>
				</div>
				<% i+=1 %>
				<% end %>		
			</div>	
			<br/>
				<div class="grid_12 vgutter ">
				<div class="grid_2 "><%=@model::LABELS[:a_mouth_wash]%></div>
				<% i=0 %>
				<% AMouthWash.all.each do |a_mouth_wash| %>
				<div class="grid_2 <%= i%2==0 ? "alpha" : ("omega" if i%3==2) %> " style="text-align:center;">

					<%= f.radio_button :a_mouth_wash_id, a_mouth_wash.id %>
					<%= f.label :"a_mouth_wash_id_#{a_mouth_wash.id}", a_mouth_wash.name %>
				</div>
				<% i+=1 %>
				<% end %>
			</div>	
			<br/>
			<div class="grid_12 vgutter ">		
					<div class="grid_2   "><%=@model::LABELS[:a_toothpaste]%></div>
					<% i=0 %>
					<% AToothpaste.all.each do |a_toothpaste| %>
					<div class="grid_2 <%= i%2==0 ? "alpha" : ("omega" if i%3==2) %> " style="text-align:center;">	
						<%= f.radio_button :a_toothpaste_id, a_toothpaste.id %>
						<%= f.label :"a_toothpaste_id_#{a_toothpaste.id}", a_toothpaste.name %>
					</div>
					<% i+=1 %>
					<% end %>
			</div>	
			<br/>
			<div class="grid_12 vgutter ">	
					<div class="grid_2 "><%=@model::LABELS[:a_breath_mint]%></div>
					<% i=0 %>
					<% ABreathMint.all.each do |a_breath_mint| %>
